@model FinalProject.Models.ViewModels.MatchDegreeVM
@{
    ViewBag.Title = "Match Details";
}

<section class="AddMatch">
    <div class="container">
        <div>
            <h2 class=" text-center ">Match Details</h2>
        </div>
        <div class="row mtDetails">
            <div class="form-group col-12 mt-5">
                @Html.LabelFor(a => a.Match.HomeTeam.teamName, "Home Team ", htmlAttributes: new { @class = "control-label mthlbl h6 " })
                @Html.DisplayFor(a => a.Match.HomeTeam.teamName)
            </div>

            <div class="form-group col-12">
                @Html.LabelFor(a => a.Match.GuestTeam.teamName, "Guest Team", htmlAttributes: new { @class = "control-label mthlbl h6" })
                @Html.DisplayFor(a => a.Match.GuestTeam.teamName)
            </div>
            <div class="form-group col-12">
                @Html.LabelFor(a => a.Match.Staduim.staduimName, "Stadium Name", htmlAttributes: new { @class = "control-label mthlbl h6" })
                @Html.DisplayFor(a => a.Match.Staduim.staduimName)
            </div>
            <div class="form-group col-12">
                @Html.LabelFor(a => a.Match.matchDate, "Match Date", htmlAttributes: new { @class = "control-label mthlbl h6" })
                @Model.Match.matchDate.Date.ToString("yyyy-MM-dd")
            </div>
            <div class="form-group col-12">
                @Html.LabelFor(a => a.Match.matchTime, "Match Time", htmlAttributes: new { @class = "control-label  mthlbl h6" })
                @Html.DisplayFor(a => a.Match.matchTime)
            </div>
            @foreach (var item in Model.Degree)
            {
                <div class="form-group col-6 mt-3">
                    @Html.LabelFor(a => item.ticketClass, "Class", htmlAttributes: new { @class = "control-label h3" })
                    @Html.DisplayFor(a => item.ticketClass)
                </div>
                <div class="form-group col-6 mt-3">
                    <div class=" ">
                        @Html.LabelFor(a => item.degreePrice, "Price ", htmlAttributes: new { @class = "control-label h6" })
                        @Html.DisplayFor(a => item.degreePrice)
                    </div>
                    <div class="">
                        @Html.LabelFor(a => item.NO_Seat, "NSeat ", htmlAttributes: new { @class = "control-label h6" })
                        @Html.DisplayFor(a => item.NO_Seat)
                    </div>
                </div>
            }


        </div>
        @Html.ActionLink("Return To Matches", "Index", null, new { @class = " linkFor " })
    </div>

</section>

