@model Match
@{
    ViewBag.Title = "AddMatch";
}



<section class="AddMatch">
    <div class="container">
        <div>
            <h3 class=" text-center">Edit Match</h3>

        </div>
        <div class="col-12 offset-3 mt-5">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    @Html.HiddenFor(model => model.matchID)
                    @Html.HiddenFor(model => model.HomeTeamId)
                    @Html.HiddenFor(model => model.GuestTeamId)
                    <div class="form-group col-12 mt-2">
                        <div class="col-4">
                            @Html.LabelFor(a => a.staduimID, "Staduim Name", htmlAttributes: new { @class = "control-label  labelStyle" })
                        </div>
                        <div class="col-8">
                            @Html.DropDownList("staduimID", null, htmlAttributes: new { @class = "form-control col-12" })
                            @Html.ValidationMessageFor(a => a.staduimID, "", new { @class = "text-danger" })
                        </div>
                        </div>

                    <div class="form-group col-12 mt-2">
                        <div class="col-4">
                            @Html.LabelFor(a => a.matchDate, "Match Date", htmlAttributes: new { @class = "control-label  labelStyle" })
                        </div>
                        <div class="col-8">
                            <input type="date" name="matchDate" value="@Model.matchDate.Date.ToString("yyyy-MM-dd")" class="form-control col-12" />
                        </div>
                            @Html.ValidationMessageFor(a => a.matchDate, "", new { @class = "text-danger" })
                        </div>

                    <div class="form-group col-12 mt-2">
                        <div class="col-4">
                            @Html.LabelFor(a => a.matchTime, "Match Time", htmlAttributes: new { @class = "control-label  labelStyle" })
                        </div>
                        <div class="col-8">
                            <input type="time" name="matchTime" value="@Model.matchTime" class="form-control col-12" />
                            @Html.ValidationMessageFor(a => a.matchTime, "", new { @class = "text-danger" })
                        </div>
                        </div>

                        <div class="form-group col-12 mt-2">
                            <button type="submit" class="btn btnmatch px-5 ml-3 mb-3"  id="btn">Edit</button><br />
                            @Html.ActionLink("Return To Matches", "Index", null, new { @class = " linkFor mt-5 ml-3 " })
                            @ViewBag.msg
                        </div>





                    </div>

            }


        </div>

    </div>

</section>



