ً@section scripts{
    <script>
        $("#teamName").keyup(function () {
            if ($("#teamName").valid())
                $("#Nfa").removeAttr("hidden")
            else
                $("#Nfa").attr("hidden","hidden")
        })
        $("#teamLogo").change(function () {
            if ($("#teamLogo").valid())
            {
                $("#Lfa").removeAttr("hidden")
                $("#lblPath").text($(this).val())
            }
            else
                $("#Lfa").attr("hidden", "hidden")
        })
    </script>
