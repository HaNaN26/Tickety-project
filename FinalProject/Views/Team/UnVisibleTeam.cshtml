@model List<Team>
@{
    ViewBag.Title = "Un Visible Team";
}




<section class="AddTeam">
    <div class="container">

        <h3 class=" text-center text-uppercase">Un Visible Teams</h3>

       @Html.ActionLink("Active Team", "Index", null, new { @class = "btn btnActive m-3 px-3 " })
       
        <table class="table table-hover unvisible ">
            <thead>
                <tr class="font-weight-bold text-center">
                    <td>Team Name</td>
                    <td>Team Logo</td>
                    <td>Active</td>
                    <td>Action</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
            {
                    <tr class="text-center">
                        <td>@Html.DisplayFor(a => item.teamName)</td>
                        <td><img src="~/img/@item.teamLogo" style="height:5rem" /></td>
                        <td> <i class="fas fa-times"></i></td>
                        <td>@Html.ActionLink("Active", "DeleteTeam", new { id = item.teamID }, new { @class = "btn btnActive m-3 px-3 " })</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</section>
